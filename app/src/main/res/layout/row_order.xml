<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:id="@+id/smartContainer"
        android:padding="5dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="1dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Order ID:"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:id="@+id/orderID"
                        android:textColor="@android:color/holo_red_dark"
                        android:text="NYF" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Order Status:"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="898.8"
                        android:textColor="@android:color/holo_orange_dark"
                        android:id="@+id/orderStatus"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Products:"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/orderProducts"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Sub Price:"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="30090"
                        android:id="@+id/sub_price"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="USD $:"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="898.8"
                        android:id="@+id/dollars"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Final Price"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="898.8"
                        android:id="@+id/orderPrice"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="Order Date:"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="898.8"
                        android:id="@+id/dateMade"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@android:color/white"
                    android:layout_height="1dp"/>
                <TextView
                    android:id="@+id/orderDetails"
                    android:layout_width="wrap_content"
                    android:text="DETAILS"
                    android:layout_alignParentBottom="true"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:paddingEnd="40dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="1dp"
                    android:gravity="center_vertical"
                    android:paddingStart="40dp"
                    android:drawablePadding="30dp"
                    android:drawableLeft="@drawable/ic_forward_black_24dp"
                    android:textAllCaps="true"
                    android:drawableTint="@android:color/holo_orange_dark"
                    android:textColor="@android:color/holo_orange_dark"
                    android:background="@drawable/borderless2"
                    android:paddingLeft="20dp"
                    android:paddingRight="40dp" />
            </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>