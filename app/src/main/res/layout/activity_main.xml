<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lay1"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:id="@+id/appLogo"
            android:src="@drawable/safe"
            android:layout_height="100dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Lets Farm"
            android:textAlignment="center"
            android:textSize="18sp"
            android:id="@+id/AppName"
            android:textColor="@color/white"
            android:padding="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/inform"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:src="@drawable/ic_notifications_none_black_24dp"
            android:layout_height="100dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Hey, Looks Like Something Just Happened to Your Account. Contact App Developer With Error Code: LFAEx002DEN"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:text="Version 1.0"
        android:id="@+id/version"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:padding="20dp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/progressLay"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:visibility="visible"
            android:layout_below="@id/lay1"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/pink"
            android:progressTint="@color/pink"
            android:foregroundTint="@color/pink"
            android:layout_gravity="center"
            android:indeterminateTint="@color/pink"
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:layout_width="70dp"
            android:outlineSpotShadowColor="@color/pink"
            android:layout_height="70dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Performing Connection Check Up"
            android:id="@+id/communicate1"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:visibility="gone"
            android:fontFamily="monospace"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:text="Detected Poor Connection to Server"
            android:id="@+id/communicate2"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_dark"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:padding="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:text="Detected No Connection Available"
            android:id="@+id/communicate3"
            android:textStyle="bold"
            android:textColor="@color/red_primary"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:text="Let's Wait For Connection to Stabilise"
            android:id="@+id/communicate4"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:padding="20dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>