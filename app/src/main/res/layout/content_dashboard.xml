<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DashboardActivity"
    android:background="@color/colorPrimary"
    tools:showIn="@layout/activity_dashboard">
<!--    android:background="#5091f9"-->
    <ScrollView
        android:layout_above="@id/say"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/dasboard_head"/>

         <HorizontalScrollView
             android:scrollbars="none"
             android:layout_marginTop="20dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent">
                 <include layout="@layout/row_service"/>

             </LinearLayout>

         </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:text="QUICK ACTIONS"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_height="match_parent"/>
            <include layout="@layout/quick_actions"/>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:background="@color/white"
        android:padding="20dp"
        android:id="@+id/say"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:text="Powered By Empower Youth In Tech (EYIT) "
        android:layout_height="wrap_content"/>
</RelativeLayout>