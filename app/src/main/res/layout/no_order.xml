<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/progressScrol"
        android:visibility="visible"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <LinearLayout
                android:padding="5dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/userImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:tint="@color/icon_grey"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="5"
                    android:src="@drawable/ic_remove_shopping_cart_black_24dp" />
            </LinearLayout>

            <View
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:text="Hey, We Found No Order History On your Account From the Database. Make your first order"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="start" />

            <TextView
                android:id="@+id/shopNow"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:text="GO TO SHOP NOW"
                android:layout_alignParentBottom="true"
                android:layout_margin="50dp"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:drawablePadding="30dp"
                android:backgroundTint="@color/myBlue"
                android:drawableLeft="@drawable/ic_add_shopping_cart_black_24dp"
                android:textAllCaps="true"
                android:drawableTint="@android:color/white"
                android:textColor="@android:color/white"
                android:background="@drawable/borderless2"
                android:paddingLeft="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>