<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:id="@+id/smartContainer"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="1dp">

        <LinearLayout

            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/pImage"
                    android:layout_width="90dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_pin"
                    android:layout_height="90dp"/>
                <LinearLayout

                    android:layout_weight="1"
                    android:padding="5dp"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/pName"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:padding="3dp"
                            android:textStyle="bold"
                            android:text="SSEGUJJA JIMMY"
                            android:gravity="start" />

                        <TextView
                            android:id="@+id/category"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:padding="3dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Frits"
                            android:gravity="start" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="UGX:"
                            android:fontFamily="serif-monospace"
                            android:gravity="end" />
                        <TextView
                            android:id="@+id/pPrice"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart"
                            android:padding="4dp"
                            android:text="899898"
                            android:fontFamily="serif-monospace"
                            android:textColor="@android:color/holo_orange_dark"
                            android:gravity="start" />
                    </LinearLayout>
                    <View
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"
                        android:background="@android:color/white"
                        android:layout_height="1dp"/>


                    <TextView
                        android:id="@+id/removeSpot"
                        android:layout_weight="2"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Check In Cart"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:textAllCaps="false"
                        android:textColor="@color/myBlue"
                        android:textAlignment="center" />


                    <TextView
                        android:id="@+id/addCart"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:text="Add TO CART"
                        android:gravity="center_vertical"
                        android:textStyle="normal"
                        android:paddingStart="20dp"
                        android:drawablePadding="30dp"
                        android:drawableLeft="@drawable/ic_add_shopping_cart_black_24dp"
                        android:textAllCaps="true"
                        android:drawableTint="@android:color/holo_orange_dark"
                        android:textColor="@android:color/holo_orange_dark"
                        android:background="@drawable/borderless2"
                        android:paddingLeft="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>